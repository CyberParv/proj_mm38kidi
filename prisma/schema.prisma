generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  price       Int
  original    Int?
  category    String
  sizes       String
  colors      String
  images      String
  badge       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactMessage {
  id          String   @id @default(cuid())
  name        String
  email       String
  subject     String
  orderNumber String?
  message     String
  createdAt   DateTime @default(now())
}
